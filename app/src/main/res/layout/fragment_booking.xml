<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".BookingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="Booking"
            android:textSize="20sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/booking_hotel"
                    android:layout_width="match_parent"
                    android:layout_height="355dp"
                    android:layout_margin="5dp"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/hotel_booking" />

                <ImageButton
                    android:id="@+id/booking_transport"
                    android:layout_width="match_parent"
                    android:layout_height="355dp"
                    android:layout_margin="5dp"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/transport_transbooking" />

                <ImageButton
                    android:id="@+id/booking_trips"
                    android:layout_width="match_parent"
                    android:layout_height="355dp"
                    android:layout_margin="5dp"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/trips_booking" />

                <ImageButton
                    android:id="@+id/booking_event"
                    android:layout_width="match_parent"
                    android:layout_height="355dp"
                    android:layout_margin="5dp"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/event_booking" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>