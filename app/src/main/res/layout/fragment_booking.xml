<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".BookingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Booking"
        android:fontFamily="@font/poppins_bold"
        android:textSize="20sp"
        android:gravity="center"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/booking_hotel"
                android:layout_width="match_parent"
                android:layout_height="355dp"
                android:scaleType="fitCenter"
                android:layout_margin="5dp"
                android:background="@null"
                android:src="@drawable/booking_hotel" />
            <ImageButton
                android:id="@+id/booking_transport"
                android:layout_width="match_parent"
                android:layout_height="355dp"
                android:scaleType="fitCenter"
                android:layout_margin="5dp"
                android:background="@null"
                android:src="@drawable/booking_transport" />
            <ImageButton
                android:id="@+id/booking_trips"
                android:layout_width="match_parent"
                android:layout_height="355dp"
                android:scaleType="fitCenter"
                android:layout_margin="5dp"
                android:background="@null"
                android:src="@drawable/booking_trips" />
            <ImageButton
                android:id="@+id/booking_event"
                android:layout_width="match_parent"
                android:layout_height="355dp"
                android:scaleType="fitCenter"
                android:layout_margin="5dp"
                android:background="@null"
                android:src="@drawable/booking_event" />


        </LinearLayout>
    </ScrollView>
    </LinearLayout>

</FrameLayout>