<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".AccountFragment"
    tools:ignore="hardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="Account"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/account_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:src="@drawable/account" />

        <TextView
            android:id="@+id/account_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="Name"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/infor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="-30dp"
            android:layout_marginTop="30dp"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:focusable="true"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center|start"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:text="Personal information"
            android:textSize="22sp"
            app:drawableStartCompat="@drawable/cus_icon_bigger"
            app:drawableTint="@color/peach300"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="-30dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:focusable="true"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center|left"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:text="Payment and cards"
            android:textSize="22sp"
            app:drawableStartCompat="@drawable/payment_icon"
            app:drawableTint="@color/peach300"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/saved"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="-30dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:focusable="true"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center|left"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:text="Saved"
            android:textSize="22sp"
            app:drawableStartCompat="@drawable/heart_icon"
            app:drawableTint="@color/peach300"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="-30dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:focusable="true"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center|left"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:text="Booking history"
            android:textSize="22sp"
            app:drawableStartCompat="@drawable/history_icon"
            app:drawableTint="@color/peach300"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="-30dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:focusable="true"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center|left"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:text="Settings"
            android:textSize="22sp"
            app:drawableStartCompat="@drawable/setting_icon"
            app:drawableTint="@color/peach300"
            tools:ignore="RtlHardcoded" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp">

            <Button
                android:id="@+id/end_button"
                style="@style/buttonStyleEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="50dp"
                android:paddingTop="20dp"
                android:paddingEnd="10dp"
                android:paddingBottom="20dp"
                android:text="End session"
                android:textSize="22sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginTop="18dp"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:src="@drawable/exit_icon"
                app:tint="@color/alert_error" />
        </FrameLayout>

    </LinearLayout>


</FrameLayout>